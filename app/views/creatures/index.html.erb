<%= render "menu" %>

<div class="container">
  <div class="col-md-6 col-md-offset-3">

    <h1>All of the creatures!</h1>
    <p>Beware, every creature in the bog is PURE EVIL.</p>

    <hr>

  </div>
  <br />
  <div class="col-md-6 col-md-offset-3">

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>

        <% @creatures.each do |creature| %>

        <!-- <%= link_to "About", '/creatures/about', :method => :get %> -->

        <tr>
          <td><%= link_to creature.name, "/creatures/#{creature.id}"  %></td>
          <td><%= creature.description %></td>
          <td><a href="<%= "/creatures/#{creature.id}/edit" %>"><button class="btn btn-default">Edit</button></td>
          <td><a href="<%= "/creatures/#{creature.id}" %>" data-method='delete'><button class="btn btn-default">Delete</button><td>
        </tr>

        <% end %>

      </tbody>
    </table>

  </div>
</div> <!-- close .container -->
